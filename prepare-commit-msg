#!/usr/bin/env python
import sys, re
from subprocess import check_output

jira_code = "BCD"
commit_msg_filepath = sys.argv[1]

branch = check_output(["git", "symbolic-ref", "--short", "HEAD"]).strip()
branch_regex = "(feature|bugfix)\/(\w+)"
msg_regex = "\[{}-(\d+)\]: (\w+)".format(jira_code)

if re.match(branch_regex, branch):
    with open(commit_msg_filepath, "r+") as fh:
        commit_msg = fh.read()
        if re.match(msg_regex, commit_msg):
            fh.seek(0, 0)
            fh.write("%s" % (commit_msg))
        else:
            print(
                "Incorrect commit message format,\
                message must start with '[{code}-no]: \
                ' e.g. '[{code}-150]: '".format(
                    code=jira_code
                )
            )
            sys.exit(1)
elif branch != "master" and branch != "dev":
    print('Incorrect branch name, branch must start with "feature/" or "bugfix/"')
    sys.exit(1)
